{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "jsx": "preserve",
    "skipLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "root/*": ["./*"]
    }
  }
}
